FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 301.45;

boundaryField
{
    upperWall      
    {
        type            zeroGradient;
    }

    leftWall     
    {
        type            fixedValue;
        value           uniform 311.15;
    }

    rightWall     
    {
        type            fixedValue;
        value           uniform 301.45;
    }

    lowerWall     
    {
        type            zeroGradient;
    }

    frontAndBack    
    {
        type            empty;
    }
}

